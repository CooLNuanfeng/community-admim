extends ../layout

block content
    div.container-fluid
        div#J_alert.alert.alert-danger(role="alert")
            button.close(type="button" aria-lable="Close")
                span(aria-hidden="true") &times;
            strong Error: 
        div.form-horizontal
            div.form-group.form-group-lg
                label.col-sm-2.control-label(for="username") 用户名 
                div.col-sm-10
                    input#J_username.form-control(placeholder="请输入用户名")
            div.form-group.form-group-lg
                label.col-sm-2.control-label(for="password") 密码
                div.col-sm-10
                    input#J_password.form-control(type="password" placeholder="请输入密码")
            div.form-group
                div.col-sm-10.col-sm-offset-2
                    div.checkbox
                        label
                            input#J_remember(type="checkbox")
                            span 记住密码
            div.form-group
                div.col-sm-10.col-sm-offset-2
                    button#J_doLogin.btn.btn-primary.btn-block.btn-lg 登录
            div.form-group
                div.col-sm-10.col-sm-offset-2
                    p.text-center 还没有账号，去<a href="/users/register" class="text-link">注册</a>

block append script
    script(src="/javascripts/md5.min.js")
    script(src="/javascripts/pages/login.js")
